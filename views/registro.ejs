    <title>Ez-neakers</title>

</head>
<body>
    <header class="header">
        <!-- Barra de Navegacion -->
        <nav class="navbar navbar-expand-lg navbar-light">
            <a href="/"><img src="../img/logo.png" alt="logo de la empresa" class="logo"></a>

            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" size="70" type="search" placeholder="Busca tus productos" aria-label="Search"> 
                <button type="submit" class="btn btn-danger my-2 my-sm-0">Buscar</button>
            </form>

            <div>
            <!-- Botones de la Barra de Navegacion -->
                <div class="btn-group">
                    <button type="button" class="btn btn-danger dropdown-toggle ml-3" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Más
                    </button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="#">1</a>
                        <a class="dropdown-item" href="#">2</a>
